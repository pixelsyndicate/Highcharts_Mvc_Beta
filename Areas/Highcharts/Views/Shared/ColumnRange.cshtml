@using Highsoft.Web.Mvc.Charts

<script type="text/javascript">

    function formatDataLabels() {
        return this.y + '°C';
    }

</script>

    @(Html.Highsoft().Highcharts(
        new Highcharts
        {
            Chart = new Chart
            {
                Width = 1087,
                Height = 400,
                Inverted = true
            },
            Title = new Title
            {
                Text = "Temperature variation by month"
            },
            Subtitle = new Subtitle
            {
                Text = "Observed in Vik i Sogn, Norway, 2009"
            },

            XAxis = new List<XAxis>
            {
                new XAxis
                {                   
                    Categories = new List<string> { 
                        "Jan",
                        "Feb",
                        "Mar",
                        "Apr",
                        "May",
                        "Jun",
                        "Jul",
                        "Aug",
                        "Sep",
                        "Oct",
                        "Nov",
                        "Dec"
                    }
                }
            },
            YAxis = new List<YAxis>
            {            
                new YAxis
                {
                    Title = new YAxisTitle
                    {
                        Text = "Temperature ( °C )"
                    }
                }
            },
            Tooltip = new Tooltip
            {
                ValueSuffix = "°C"
            },
            PlotOptions = new PlotOptions
            {
                Columnrange = new PlotOptionsColumnrange
                {
                    DataLabels = new PlotOptionsColumnrangeDataLabels
                    {
                        Enabled = true,
                        Formatter = "formatDataLabels"
                    }
                }
            },
            Legend = new Legend
            {
                Enabled = true
            },
            Series = new List<Series>
            {                    
                new ColumnrangeSeries
                {
                    Name = "Temperatures",
                    Data = @ViewData["temperatureData"] as List<ColumnrangeSeriesData>
                }
            }
        }
        , "chart")
    )