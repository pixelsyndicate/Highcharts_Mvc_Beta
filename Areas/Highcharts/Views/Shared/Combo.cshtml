@using Highsoft.Web.Mvc.Charts
@using System.Collections.Specialized

    @(Html.Highsoft().Highcharts(
        new Highcharts
        {
            Chart = new Chart
            {
                Width = 1087,
                Height = 400
            },
            Title = new Title
            {
                Text = "Combination chart"
            },
            XAxis = new List<XAxis>
            {            
                new XAxis
                {
                    Categories = new List<string> { "Apples", "Oranges", "Pears", "Bananas", "Plums" },
                }
            },
            Labels = new Labels
            {
                Items = new LabelsItems
                {
                    Html = "Total fruit consumption",
                    Style = new NameValueCollection
                    {
                        { "left", "50px" },
                        { "top", "18px" }                        
                    }
                }
            },
            Series = new List<Series>
            {                    
                new ColumnSeries
                {
                    Name = "Jane",
                    Data = @ViewData["janeData"] as List<ColumnSeriesData>
                },
                new ColumnSeries
                {
                    Name = "John",
                    Data = @ViewData["johnData"] as List<ColumnSeriesData>
                },
                new ColumnSeries
                {
                    Name = "Joe",
                    Data = @ViewData["joeData"] as List<ColumnSeriesData>
                },
                new SplineSeries
                {
                    Name = "Average",
                    Data = @ViewData["averageData"] as List<SplineSeriesData>,
                    Marker = new SplineSeriesMarker
                    {
                        LineWidth = 2,
                        FillColor = "white"
                    }
                },
                new PieSeries
                {
                    Name = "Total Consumption",
                    Size = "100",
                    ShowInLegend = false,
                    DataLabels = new PieSeriesDataLabels
                    {
                        Enabled = false
                    },
                    Data = @ViewData["pieData"] as List<PieSeriesData>
                }
            }
        }
        , "chart"));
        
        
    